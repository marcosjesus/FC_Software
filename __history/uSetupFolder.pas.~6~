unit uSetupFolder;

interface

Uses
  uClassDBGenerics,
  uFunctions,
  StrUtils ,
  System.SysUtils;

var
  Folder : TFolder;

implementation


procedure GenereteFolder(varInitial, varID : String);
begin
  Folder := TFolder.Create;
  Try
      Folder.pasta         := varInitial + '_' +  ZeroLeft(varID,7);
      Folder.CreateFolder;

      Folder.subpasta      := 'Quotation';
      Folder.CreateSubPasta;

      Folder.subpasta      := 'Order';
      Folder.CreateSubPasta;

      Folder.subpasta      := 'Invoice';
      Folder.CreateSubPasta;

      Folder.subpasta      := 'Service';
      Folder.CreateSubPasta;

  Finally
     FreeAndNil(Folder);
  End;

end;

end.
